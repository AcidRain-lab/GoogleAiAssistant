@model WebObjectsBLL.DTO.BankCardDTO

@{
    ViewData["Title"] = "Add New Bank Card";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Add" method="post">
    <!-- Скрытое поле для передачи clientId -->
    <input type="hidden" name="clientId" value="@ViewBag.ClientId" />

    <div class="form-group">
        <label asp-for="CardNumber" class="form-label">Card Number</label>
        <input asp-for="CardNumber" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="CardHolderName" class="form-label">Card Holder Name</label>
        <input asp-for="CardHolderName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ExpirationDate" class="form-label">Expiration Date</label>
        <input asp-for="ExpirationDate" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="CreditLimit" class="form-label">Credit Limit</label>
        <input asp-for="CreditLimit" type="number" class="form-control" placeholder="Enter Credit Limit" required />
    </div>
    <div class="form-group">
        <label asp-for="IsPrimary" class="form-label">Is Primary</label>
        <select asp-for="IsPrimary" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CardTypeId" class="form-label">Card Type</label>
        <select asp-for="CardTypeId" class="form-control">
            @foreach (var cardType in ViewBag.CardTypes)
            {
                <option value="@cardType.Id">@cardType.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add Card</button>
    <a asp-action="Index" asp-route-clientId="@ViewBag.ClientId" class="btn btn-secondary">Cancel</a>
</form>
