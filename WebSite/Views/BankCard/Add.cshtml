@model WebObjectsBLL.DTO.BankCardDTO

@{
    ViewData["Title"] = "Add Bank Card";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Add" method="post">
    <input type="hidden" asp-for="BankAccountId" />
    <div class="form-group">
        <label asp-for="CardNumber" class="control-label"></label>
        <input asp-for="CardNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CardHolderName" class="control-label"></label>
        <input asp-for="CardHolderName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ExpirationDate" class="control-label"></label>
        <input asp-for="ExpirationDate" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-route-bankAccountId="@Model.BankAccountId" class="btn btn-secondary">Cancel</a>
</form>
