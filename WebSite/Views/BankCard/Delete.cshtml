@model WebObjectsBLL.DTO.BankCardDTO

@{
    ViewData["Title"] = "Delete Bank Card";
}

<h2>Delete Bank Card</h2>

<div class="alert alert-danger">
    <p>Are you sure you want to delete this card?</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="BankAccountId" />
    <div>
        <strong>Card Number:</strong> @Model.CardNumber
    </div>
    <div>
        <strong>Card Holder:</strong> @Model.CardHolderName
    </div>
    <div>
        <strong>Card Type:</strong> @Model.CardTypeName
    </div>
    <div>
        <strong>Expiration Date:</strong> @Model.ExpirationDate.ToShortDateString()
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-bankAccountId="@Model.BankAccountId" class="btn btn-secondary">Cancel</a>
</form>
