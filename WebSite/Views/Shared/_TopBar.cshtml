<div class="top-bar container">
    <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="Index">Mega Bank</a>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a class="btn btn-warning text-dark" asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a>
    }
    else
    {
        <a class="btn btn-warning text-dark" asp-area="" asp-controller="Auth" asp-action="LoginBasic">Login</a>
    }
</div>
