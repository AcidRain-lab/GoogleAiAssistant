@model WebObjectsBLL.DTO.CashbackDTO

@{
    ViewData["Title"] = "Delete Cashback";
}

<h2>Delete Cashback</h2>

<div>
    <h4>Are you sure you want to delete this Cashback?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.Category
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount
        </dd>
        <dt class="col-sm-2">
            Created Date
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDate?.ToShortDateString()
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ClientId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-clientId="@Model.ClientId" class="btn btn-secondary">Cancel</a>
</form>
