@model WebObjectsBLL.DTO.DepositTermDTO

@{
    ViewData["Title"] = "Edit Deposit Term";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DepositTypeId" />

    <div class="form-group">
        <label asp-for="TermMonths" class="control-label">Term (Months)</label>
        <input asp-for="TermMonths" class="form-control" />
        <span asp-validation-for="TermMonths" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Currency" class="control-label">Currency</label>
        <select asp-for="Currency" class="form-control">
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
            <option value="UAH">UAH</option>
        </select>
        <span asp-validation-for="Currency" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="InterestRate" class="control-label">Interest Rate (%)</label>
        <input asp-for="InterestRate" class="form-control" />
        <span asp-validation-for="InterestRate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" asp-route-depositTypeId="@Model.DepositTypeId" class="btn btn-secondary">Cancel</a>
</form>
