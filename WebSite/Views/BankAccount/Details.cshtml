@model WebObjectsBLL.DTO.BankAccountDTO

<div class="account-details">
    <h2>Account Details</h2>
    <div class="account-info">
        <h4>Main Information</h4>
        <p><strong>Account Number:</strong> @Model.AccountNumber</p>
        <p><strong>Account Name:</strong> @Model.AccountName</p>
        <p><strong>Account Type:</strong> @Model.BankAccountTypeId</p>
        <p><strong>Currency:</strong> @Model.BankCurrencyId</p>
        <p><strong>Balance:</strong> @Model.Balance.ToString("C")</p>
    </div>

    <div class="account-status">
        <h4>Account Status</h4>
        <p><strong>Opened Date:</strong> @Model.OpenedDate.ToString("yyyy-MM-dd")</p>
        @if (Model.ClosedDate.HasValue)
        {
            <p><strong>Closed Date:</strong> @Model.ClosedDate.Value.ToString("yyyy-MM-dd")</p>
        }
        else
        {
            <p><strong>Status:</strong> Active</p>
        }
    </div>

    <div class="client-info">
        <h4>Client Information</h4>
        <p><strong>Client Name:</strong> @Model.ClientFullName</p>
        <p><strong>Email:</strong> @Model.Client.Email</p>
        <p><strong>Phone:</strong> @Model.Client.Phone</p>
    </div>

    <div class="linked-cards">
        <h4>Linked Cards</h4>
        <ul>
            @foreach (var cardInfo in Model.LinkedCardInfo)
            {
                <li>@cardInfo</li>
            }
        </ul>
    </div>

    <a class="btn btn-primary" href="@Url.Action("Index", "BankAccount", new { clientId = Model.ClientId })">Back to Accounts</a>
</div>
