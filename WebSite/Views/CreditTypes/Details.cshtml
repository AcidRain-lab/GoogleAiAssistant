@model WebObjectsBLL.DTO.CreditTypeDTO

<h2>Details for @Model.CreditName</h2>
<table class="table">
    <tr>
        <th>Amount</th>
        <td>@Model.CreditAmount</td>
    </tr>
    <tr>
        <th>Term</th>
        <td>@Model.CreditTerm</td>
    </tr>
    <tr>
        <th>Additional Conditions</th>
        <td>@Model.AdditionalConditions</td>
    </tr>
</table>

<h3>Documents</h3>
@if (Model.Documents != null && Model.Documents.Any())
{
    <ul>
        @foreach (var document in Model.Documents)
        {
            <li>@document.Name - <a href="@Url.Action("DownloadDocument", "CreditTypes", new { id = document.Id })">Download</a></li>
        }
    </ul>
}
else
{
    <p>No documents available.</p>
}

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
