@model WebObjectsBLL.DTO.CreditTypeDTO

<h1>Edit Credit Type</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="CreditName" class="control-label">Name</label>
        <input asp-for="CreditName" class="form-control" />
        <span asp-validation-for="CreditName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreditAmount" class="control-label">Amount</label>
        <input asp-for="CreditAmount" class="form-control" />
        <span asp-validation-for="CreditAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreditTerm" class="control-label">Term</label>
        <input asp-for="CreditTerm" class="form-control" />
        <span asp-validation-for="CreditTerm" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Upload New Documents</label>
        <input type="file" name="newDocumentFiles" class="form-control" multiple />
    </div>

    <div class="form-group">
        <label>Existing Documents</label>
        @if (Model.Documents != null && Model.Documents.Any())
        {
            <div class="row">
                @foreach (var document in Model.Documents)
                {
                    <div class="col-md-3 text-center mb-3">
                        <div>
                            <a href="@Url.Action("DownloadDocument", "CreditTypes", new { id = document.Id })">@document.Name</a>
                        </div>

                        <div class="form-check mt-2">
                            <input class="form-check-input" type="radio" name="primaryDocumentId" value="@document.Id" @(document.IsPrime ? "checked" : "") />
                            <label class="form-check-label">Set as Primary</label>
                        </div>

                        <div>
                            <input type="checkbox" name="documentsToDelete" value="@document.Id" />
                            <label>Delete</label>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No attached documents.</p>
        }
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
