@model WebObjectsBLL.DTO.DepositDTO

@{
    ViewData["Title"] = "Delete Deposit";
}

<h2>Delete Deposit</h2>

<div class="alert alert-danger">
    <p>Are you sure you want to delete this deposit?</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ClientId" />
    <div>
        <strong>Deposit Amount:</strong> @Model.DepositAmount
    </div>
    <div>
        <strong>Currency:</strong> @Model.Currency
    </div>
    <div>
        <strong>Interest Rate:</strong> @Model.InterestRate
    </div>
    <div>
        <strong>Maturity Date:</strong> @Model.MaturityDate.ToShortDateString()
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-clientId="@Model.ClientId" class="btn btn-secondary">Cancel</a>
</form>
