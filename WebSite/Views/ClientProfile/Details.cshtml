@model WebObjectsBLL.DTO.ClientProfileDTO

@{
    ViewData["Title"] = "Client Details";
}

<h2>Client Details</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>@Model.FullName</h4>
    </div>
    <div class="card-body">
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Birth Date:</strong> @(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToShortDateString() : "N/A")</p>
        <p><strong>Passport Data:</strong> @Model.PassportData</p>
        <p><strong>Tax ID:</strong> @Model.TaxId</p>
        <p><strong>Is Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
    </div>
</div>

