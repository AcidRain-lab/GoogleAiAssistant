@model WebObjectsBLL.DTO.BankAccountTransactionDTO

<h2>Add Card Transfer</h2>

<form asp-controller="Transactions" asp-action="AddCardTransfer" method="post">
    <input type="hidden" id="BankCardId" name="BankCardId" value="@Model.BankCardId" />

    <div class="form-group">
        <label for="Amount">Amount</label>
        <input type="number" class="form-control" id="Amount" name="Amount" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="RecipientName">Recipient Name</label>
        <input type="text" class="form-control" id="RecipientName" name="FromClientName" required />
    </div>

    <div class="form-group">
        <label for="Notes">Description</label>
        <textarea class="form-control" id="Notes" name="Notes"></textarea>
    </div>

    <button type="submit" class="btn btn-success mt-3">Submit</button>
    <a asp-controller="Transactions" asp-action="Index" asp-route-cardId="@Model.BankCardId" class="btn btn-secondary mt-3">Cancel</a>
</form>
