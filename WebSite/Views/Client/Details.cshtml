@model WebObjectsBLL.DTO.ClientDetailDTO

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <nav class="nav flex-column bg-light p-3 rounded">
                <a class="nav-link" href="#" data-url="/BankAccount/Index?clientId=@Model.Id" onclick="loadContent(this); return false;">Bank Accounts</a>
                <a class="nav-link" href="#" data-url="/BankCard/Index?clientId=@Model.Id" onclick="loadContent(this); return false;">Bank Cards</a>
                <a class="nav-link" href="#" data-url="/Credit/Index?clientId=@Model.Id" onclick="loadContent(this); return false;">Active Credits</a>
                <a class="nav-link" href="#" data-url="/Deposit/Index?clientId=@Model.Id" onclick="loadContent(this); return false;">Active Deposits</a>
                <a class="nav-link" href="#" data-url="/Cashback/Index?clientId=@Model.Id" onclick="loadContent(this); return false;">Cashback</a>
                <a class="nav-link" href="#" data-url="/RegularPayment/Index?clientId=@Model.Id" onclick="loadContent(this); return false;">Regular Payments</a>
                <a class="nav-link" href="#" data-url="/Message/Index?userId=@Model.Id" onclick="loadContent(this); return false;">Messages</a>
            </nav>
        </div>

        <!-- Client Details and Dynamic Content -->
        <div class="col-md-9">
            <div class="row">
                <!-- Dynamic Content -->
                <div class="col-md-12 col-lg-6 me-3">
                    <!-- Добавлен класс me-3 -->
                    <div id="dynamic-content" class="mt-4">
                        <!-- AJAX content will be loaded here -->
                    </div>
                </div>
                <!-- Client Details -->
                <div class="col-md-12 col-lg-5">
                    <!-- Уменьшена ширина для учета отступа -->
                    <div class="bg-primary text-white text-center p-4 rounded">
                        @if (Model.Avatar?.Base64Image != null)
                        {
                            <img src="data:image/png;base64,@Model.Avatar.Base64Image" alt="Client Avatar" class="rounded-circle mb-3" style="width: 100px; height: 100px;">
                        }
                        else
                        {
                            <img src="/images/placeholder-avatar.png" alt="Placeholder Avatar" class="rounded-circle mb-3" style="width: 100px; height: 100px;">
                        }
                        <h2 class="mb-0">@Model.FullName</h2>
                    </div>
                    <div class="card mt-4 shadow-sm">
                        <div class="card-body">
                            <h3 class="mb-3">Client Details</h3>
                            <dl class="row">
                                <dt class="col-sm-3">Email</dt>
                                <dd class="col-sm-9">@(!string.IsNullOrEmpty(Model.Email) ? Model.Email : "Not specified")</dd>

                                <dt class="col-sm-3">Phone</dt>
                                <dd class="col-sm-9">@(!string.IsNullOrEmpty(Model.Phone) ? Model.Phone : "Not specified")</dd>

                                <dt class="col-sm-3">Birth Date</dt>
                                <dd class="col-sm-9">@Model.BirthDate?.ToShortDateString() ?? "Not specified"</dd>

                                <dt class="col-sm-3">Passport Data</dt>
                                <dd class="col-sm-9">@(!string.IsNullOrEmpty(Model.PassportData) ? Model.PassportData : "Not specified")</dd>

                                <dt class="col-sm-3">Tax ID</dt>
                                <dd class="col-sm-9">@(!string.IsNullOrEmpty(Model.TaxId) ? Model.TaxId : "Not specified")</dd>

                                <dt class="col-sm-3">Is Active</dt>
                                <dd class="col-sm-9">@Model.IsActive ? "Yes" : "No"</dd>
                            </dl>
                            <!-- Action Buttons -->
                            <div class="mt-4">
                                <a class="btn btn-primary me-2" href="/Clients/Edit/@Model.Id">Edit</a>
                                <a class="btn btn-secondary" href="/Clients">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function loadContent(link) {
        const url = link.dataset.url;
        const content = document.getElementById('dynamic-content');
        content.innerHTML = '<p>Loading...</p>';

        fetch(url)
            .then(response => {
                if (!response.ok) throw new Error('Failed to load content');
                return response.text();
            })
            .then(html => {
                content.innerHTML = html;
            })
            .catch(error => {
                content.innerHTML = '<p>Error loading content. Please try again.</p>';
                console.error(error);
            });
    }
</script>
