<div class="container mt-4">
    <div class="row">
       

        <!-- Client Details -->
        <!-- Avatar and Full Name -->
        <div class="bg-primary text-white text-center p-4 rounded">
            @if (Model.Avatar?.Base64Image != null)
            {
