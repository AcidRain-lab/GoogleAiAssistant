@model WebObjectsBLL.DTO.ClientDetailDTO
<link rel="stylesheet" href="~/css/client_details.css" asp-append-version="true" />
<script src="~/js/client_scripts.js" asp-append-version="true"></script>

<div class="container mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <nav class="nav flex-column sidebar-nav">
                <a class="nav-link" href="#" data-url="/BankAccount/Index?clientId=@Model.Id" onclick="loadContent(this); return false;" id="default-link">Payment Accounts</a>
                <a class="nav-link" href="#" data-url="/BankCard/Index?clientId=@Model.Id" onclick="loadContent(this); return false;">Bank Cards</a>
                <a class="nav-link" href="#" data-url="/Credit/Index?clientId=@Model.Id" onclick="loadContent(this); return false;">Active Credits</a>
                <a class="nav-link" href="#" data-url="/Deposit/Index?clientId=@Model.Id" onclick="loadContent(this); return false;">Active Deposits</a>
                <a class="nav-link" href="#" data-url="/Cashback/Index?clientId=@Model.Id" onclick="loadContent(this); return false;">Cashback</a>
                <a class="nav-link" href="#" data-url="/RegularPayment/Index?clientId=@Model.Id" onclick="loadContent(this); return false;">Regular Payments</a>
                <a class="nav-link" href="#" data-url="/Message/Index?userId=@Model.Id" onclick="loadContent(this); return false;">Messages</a>
            </nav>
        </div>

        <!-- Client Details and Dynamic Content -->
        <div class="col-md-9">
            <div class="row">
                <!-- Dynamic Content -->
                <div class="col-md-12 col-lg-7 mb-3">
                    <div id="dynamic-content" class="bg-white p-3 rounded shadow-sm">
                        <!-- AJAX content will be loaded here -->
                        <p class="text-muted">Loading content...</p>
                    </div>
                </div>

                <!-- Client Details -->
                <div class="col-md-12 col-lg-5">
                    <!-- Avatar Section -->
                       @await Html.PartialAsync("_AvatarBlockPartial", Model.Avatar, new ViewDataDictionary(ViewData)
                       {
                           ["ControllerName"] = "Client", // Или другой контроллер
                           ["AssociatedRecordId"] = Model.Id
                       })

                    <!-- Client Information Card -->
                    <div class="card mt-4 client-details-card">
                        <div class="card-body">
                            <h3 class="mb-3">Client Details</h3>
                            <dl class="row">
                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.Email) ? Model.Email : "Not specified")</dd>

                                <dt class="col-sm-4">Phone</dt>
                                <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.Phone) ? Model.Phone : "Not specified")</dd>

                                <dt class="col-sm-4">Birth Date</dt>
                                <dd class="col-sm-8">@Model.BirthDate?.ToShortDateString() ?? "Not specified"</dd>

                                <dt class="col-sm-4">Passport</dt>
                                <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.PassportData) ? Model.PassportData : "Not specified")</dd>

                                <dt class="col-sm-4">Tax ID</dt>
                                <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.TaxId) ? Model.TaxId : "Not specified")</dd>

                                <dt class="col-sm-4">Is Active</dt>
                                <dd class="col-sm-8">@Model.IsActive ? "Yes" : "No"</dd>
                            </dl>
                            <div class="mt-4 d-flex justify-content-between">
                                <a class="btn btn-warning" href="/Client/Edit/@Model.Id">Edit</a>
                                <a class="btn btn-secondary" href="/Client/index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
