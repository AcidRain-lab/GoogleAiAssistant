@model WebObjectsBLL.DTO.ClientDetailDTO

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <nav class="nav flex-column bg-light">
                <a class="nav-link" href="/BankCards">Bank Cards</a>
                <a class="nav-link" href="/Credits">Active Credits</a>
                <a class="nav-link" href="/Deposits">Active Deposits</a>
                <a class="nav-link" href="/Cashback">Cashback</a>
                <a class="nav-link" href="/Payments">Regular Payments</a>
                <a class="nav-link active" href="/Clients">Client Profile</a>
            </nav>
        </div>

        <div class="col-md-9">
            <h2>@Model.FullName</h2>
            <div class="d-flex align-items-center mb-4">
                @if (Model.Avatar?.Base64Image != null)
                {
                    <img src="data:image/png;base64,@Model.Avatar.Base64Image" alt="Client Avatar" class="rounded-circle" style="width: 100px; height: 100px;">
                }
                else
                {
                    <img src="/images/placeholder-avatar.png" alt="Placeholder Avatar" class="rounded-circle" style="width: 100px; height: 100px;">
                }
            </div>
            <h3>Client Details</h3>
            <ul>
                <li>Email: @Model.Email</li>
                <li>Phone: @Model.Phone</li>
                @if (Model.BirthDate.HasValue)
                {
                    <li>Birth Date: @Model.BirthDate.Value.ToShortDateString()</li>
                }
                else
                {
                    <li>Birth Date: Not specified</li>
                }
                <li>Passport Data: @Model.PassportData</li>
                <li>Tax ID: @Model.TaxId</li>
                <li>Is Active: @(Model.IsActive ? "Yes" : "No")</li>
            </ul>
            <div class="mt-4">
                <a class="btn btn-primary" href="/Clients/Edit/@Model.Id">Edit</a>
                <a class="btn btn-secondary" href="/Clients">Back to List</a>
            </div>
        </div>
    </div>
</div>
