@model WebObjectsBLL.DTO.ClientDetailDTO

@{
    ViewData["Title"] = "Client Details";
}

<h2>Client Details</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>@Model.FirstName @Model.LastName</h4>
    </div>
    <div class="card-body">
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Birth Date:</strong> @(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToShortDateString() : "N/A")</p>
        <p><strong>Passport Data:</strong> @(string.IsNullOrWhiteSpace(Model.PassportData) ? "N/A" : Model.PassportData)</p>
        <p><strong>Tax ID:</strong> @(string.IsNullOrWhiteSpace(Model.TaxId) ? "N/A" : Model.TaxId)</p>
        <p><strong>Is FOP:</strong> @(Model.IsFop ? "Yes" : "No")</p>
        <p><strong>Is Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
    </div>
</div>

<div class="mt-3 d-flex flex-column">
    <a asp-controller="Credit" asp-action="Index" asp-route-clientId="@Model.Id" class="btn btn-secondary mb-2">Active Credits</a>
    <a asp-controller="Deposit" asp-action="Index" asp-route-clientId="@Model.Id" class="btn btn-secondary mb-2">Active Deposits</a>
    <a asp-controller="Cashback" asp-action="Index" asp-route-clientId="@Model.Id" class="btn btn-secondary mb-2">Cashback</a>
    <a asp-controller="RegularPayment" asp-action="Index" asp-route-clientId="@Model.Id" class="btn btn-secondary mb-2">Regular Payments</a>
    <a asp-controller="Message" asp-action="Index" asp-route-clientId="@Model.Id" class="btn btn-secondary mb-2">Messages</a>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
