                <a class="nav-link" href="#" data-url="/Payments?clientId=@Model.Id" onclick="loadContent(this); return false;">Regular Payments</a>
                <a class="nav-link active" href="/Clients/Details/@Model.Id">Client Profile</a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div id="dynamic-content" class="mt-4">
                <!-- AJAX content will be loaded here -->
            </div>
        </div>
    </div>
</div>
