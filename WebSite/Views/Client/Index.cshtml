@model IEnumerable<WebObjectsBLL.DTO.ClientDTO>
@{
    ViewData["Title"] = "Clients";
}

<h1>Clients</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Client Type</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Name</td>
                <td>@(client.IsIndividual ? "Individual" : "Organization")</td>
                <td>@client.Email</td>
                <td>@client.Phone</td>
                <td>@(client.IsActive == true ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@client.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this client?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-success">Add New Client</a>
