@model WebObjectsBLL.DTO.DepositTypeDetailDTO

<h1>Добавить тип депозита</h1>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="DepositName" class="control-label">Название</label>
        <input asp-for="DepositName" class="form-control" />
        <span asp-validation-for="DepositName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Загрузить аватар</label>
        <input type="file" name="avatarFile" class="form-control" />
    </div>

    <div class="form-group">
        <label>Добавить медиа файлы</label>
        <input type="file" name="mediaFiles" class="form-control" multiple />
    </div>

    <div class="form-group">
        <label>Добавить документы</label>
        <input type="file" name="documentFiles" class="form-control" multiple />
    </div>

    <div class="form-group">
        <label>Условия депозита</label>
        <table class="table">
            <thead>
                <tr>
                    <th>Срок (месяцы)</th>
                    <th>Валюта</th>
                    <th>Процентная ставка (%)</th>
                </tr>
            </thead>
            <tbody id="terms-container">
                <tr>
                    <td><input type="number" name="DepositTerms[0].TermMonths" class="form-control" /></td>
                    <td>
                        <select name="DepositTerms[0].Currency" class="form-control">
                            <option value="USD">USD</option>
                            <option value="EUR">EUR</option>
                            <option value="UAH">UAH</option>
                        </select>
                    </td>
                    <td><input type="number" step="0.01" name="DepositTerms[0].InterestRate" class="form-control" /></td>
                </tr>
            </tbody>
        </table>
        <button type="button" id="add-term" class="btn btn-primary">Добавить условие</button>
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <script>
        let termIndex = 1;
        document.getElementById('add-term').addEventListener('click', () => {
            const container = document.getElementById('terms-container');
            const newRow = `
                <tr>
                    <td><input type="number" name="DepositTerms[${termIndex}].TermMonths" class="form-control" /></td>
                    <td>
                        <select name="DepositTerms[${termIndex}].Currency" class="form-control">
                            <option value="USD">USD</option>
                            <option value="EUR">EUR</option>
                            <option value="UAH">UAH</option>
                        </select>
                    </td>
                    <td><input type="number" step="0.01" name="DepositTerms[${termIndex}].InterestRate" class="form-control" /></td>
                </tr>
            `;
            container.insertAdjacentHTML('beforeend', newRow);
            termIndex++;
        });
    </script>
}
