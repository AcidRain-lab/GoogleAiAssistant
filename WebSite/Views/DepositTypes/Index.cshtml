@model IEnumerable<WebObjectsBLL.DTO.DepositTypeDTO>

@{
    ViewData["Title"] = "Deposit Types";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Add New Deposit Type</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Minimum Amount</th>
            <th>Maximum Amount</th>
            <th>Primary Document</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var depositType in Model)
        {
            <tr>
                <td>@depositType.DepositName</td>
                <td>@depositType.MinimumAmount</td>
                <td>@depositType.MaximumAmount</td>
                <td>
                    @if (depositType.Documents != null && depositType.Documents.Any(doc => doc.IsPrime))
                    {
                        var primaryDocument = depositType.Documents.First(doc => doc.IsPrime);
                        <a href="@Url.Action("DownloadDocument", "DepositTypes", new { id = primaryDocument.Id })">@primaryDocument.Name</a>
                    }
                    else
                    {
                        <span>No Primary Document</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@depositType.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@depositType.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@depositType.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
