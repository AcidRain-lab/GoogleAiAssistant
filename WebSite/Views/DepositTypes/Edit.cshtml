@model WebObjectsBLL.DTO.DepositTypeDetailDTO

@{
    ViewData["Title"] = "Edit Deposit Type";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <!-- Deposit Type Details -->
    <div class="form-group">
        <label asp-for="DepositName" class="control-label"></label>
        <input asp-for="DepositName" class="form-control" />
        <span asp-validation-for="DepositName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Avatar Management -->
    <hr />
    <h4>Avatar</h4>
    @if (Model.Avatar != null)
    {
        <div class="form-group">
            <img src="@Url.Action("GetAvatar", "Media", new { id = Model.Avatar.Id })" alt="Avatar" class="img-thumbnail" style="max-height: 150px;" />
            <div class="form-check">
                <input type="checkbox" name="AvatarToDelete" value="@Model.Avatar.Id" class="form-check-input" />
                <label class="form-check-label">Delete Avatar</label>
            </div>
        </div>
    }
    <div class="form-group">
        <label>Upload New Avatar</label>
        <input type="file" name="avatarFile" class="form-control" />
    </div>

    <!-- Media Files Management -->
    <hr />
    <h4>Media Files</h4>
    @if (Model.MediaFiles != null && Model.MediaFiles.Any())
    {
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Is Primary</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var media in Model.MediaFiles)
                {
                    <tr>
                        <td>@media.Name</td>
                        <td>
                            <input type="radio" name="PrimaryMediaId" value="@media.Id" @(media.IsPrime ? "checked" : "") />
                        </td>
                        <td>
                            <input type="checkbox" name="MediaToDelete" value="@media.Id" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="form-group">
        <label>Upload New Media Files</label>
        <input type="file" name="mediaFiles" multiple class="form-control" />
    </div>

    <!-- Documents Management -->
    <hr />
    <h4>Documents</h4>
    @if (Model.Documents != null && Model.Documents.Any())
    {
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Is Primary</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var document in Model.Documents)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("DownloadDocument", "DepositTypes", new { id = document.Id })">@document.Name</a>
                        </td>
                        <td>
                            <input type="radio" name="PrimaryDocumentId" value="@document.Id" @(document.IsPrime ? "checked" : "") />
                        </td>
                        <td>
                            <input type="checkbox" name="DocumentsToDelete" value="@document.Id" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="form-group">
        <label>Upload New Documents</label>
        <input type="file" name="documentFiles" multiple class="form-control" />
    </div>

    <!-- Deposit Terms -->
    <hr />
    <h4>Deposit Terms</h4>
    @if (Model.DepositTerms != null && Model.DepositTerms.Any())
    {
        var groupedTerms = Model.DepositTerms
        .GroupBy(t => t.Currency)
        .OrderBy(g => g.Key);

        foreach (var group in groupedTerms)
        {
            <h5>@group.Key</h5>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Term (Months)</th>
                        <th>Interest Rate (%)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var term in group.OrderBy(t => t.TermMonths))
                    {
                        <tr>
                            <td>@term.TermMonths</td>
                            <td>@term.InterestRate</td>
                            <td>
                                <a asp-controller="DepositTerms"
                                   asp-action="Edit"
                                   asp-route-id="@term.Id"
                                   asp-route-depositTypeId="@Model.Id"
                                   asp-route-returnUrl="@Url.Action("Edit", "DepositTypes", new { id = Model.Id })"
                                   class="btn btn-sm btn-warning">Edit</a>
                                <button class="btn btn-sm btn-danger" onclick="showDeleteModal('@term.Id')">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
    else
    {
        <p>No deposit terms available.</p>
    }
    <a asp-controller="DepositTerms"
       asp-action="Add"
       asp-route-depositTypeId="@Model.Id"
       asp-route-returnUrl="@Url.Action("Edit", "DepositTypes", new { id = Model.Id })"
       class="btn btn-success btn-sm">Add Term</a>

    <hr />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<!-- Delete Modal -->
<div id="deleteModal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this deposit term?</p>
            </div>
            <div class="modal-footer">
                <form asp-controller="DepositTerms" asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteId" name="id" />
                    <input type="hidden" name="depositTypeId" value="@Model.Id" />
                    <input type="hidden" name="returnUrl" value="@Url.Action("Edit", "DepositTypes", new { id = Model.Id })" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function showDeleteModal(id) {
        document.getElementById('deleteId').value = id;
        var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        deleteModal.show();
    }
</script>
