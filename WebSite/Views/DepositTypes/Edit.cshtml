@model WebObjectsBLL.DTO.DepositTypeDetailDTO

<h1>Редактировать тип депозита</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="DepositName" class="control-label">Название</label>
        <input asp-for="DepositName" class="form-control" />
        <span asp-validation-for="DepositName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Текущий аватар</label>
        @if (Model.Avatar != null && !string.IsNullOrEmpty(Model.Avatar.Base64Image))
        {
            <div class="mb-3">
                <img src="data:image/png;base64,@Model.Avatar.Base64Image" alt="Avatar" style="max-width: 150px; max-height: 150px; border: 1px solid #ccc;" />
            </div>
        }
        else
        {
            <p>Аватар не загружен.</p>
        }
        <input type="file" name="avatarFile" class="form-control" />
    </div>

    <div class="form-group">
        <label>Добавить медиа файлы</label>
        <input type="file" name="mediaFiles" class="form-control" multiple />
    </div>

    <div class="form-group">
        <label>Существующие медиа файлы</label>
        @if (Model.MediaFiles != null && Model.MediaFiles.Any())
        {
            <div class="row">
                @foreach (var media in Model.MediaFiles)
                {
                    <div class="col-md-3 text-center mb-3">
                        @if (!string.IsNullOrEmpty(media.Base64Image))
                        {
                            <div>
                                <img src="data:image/png;base64,@media.Base64Image" alt="@media.Name" style="max-width: 100%; max-height: 150px; border: 1px solid #ddd;" />
                            </div>
                        }
                        else
                        {
                            <div>
                                <a href="@Url.Action("DownloadMedia", "DepositTypes", new { id = media.Id })">@media.Name</a>
                            </div>
                        }

                        <div class="form-check mt-2">
                            <input class="form-check-input" type="radio" name="PrimaryMediaId" value="@media.Id" @(media.IsPrime ? "checked" : "") />
                            <label class="form-check-label">Установить как основное</label>
                        </div>

                        <div>
                            <input type="checkbox" name="MediaToDelete" value="@media.Id" />
                            <label>Удалить</label>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>Нет прикрепленных медиа файлов.</p>
        }
    </div>

    <div class="form-group">
        <label>Добавить документы</label>
        <input type="file" name="documentFiles" class="form-control" multiple />
    </div>

    <div class="form-group">
        <label>Существующие документы</label>
        @if (Model.Documents != null && Model.Documents.Any())
        {
            <div class="row">
                @foreach (var document in Model.Documents)
                {
                    <div class="col-md-3 text-center mb-3">
                        <div>
                            <a href="@Url.Action("DownloadDocument", "DepositTypes", new { id = document.Id })">@document.Name</a>
                        </div>

                        <div class="form-check mt-2">
                            <input class="form-check-input" type="radio" name="PrimaryDocumentId" value="@document.Id" @(document.IsPrime ? "checked" : "") />
                            <label class="form-check-label">Установить как основное</label>
                        </div>

                        <div>
                            <input type="checkbox" name="DocumentsToDelete" value="@document.Id" />
                            <label>Удалить</label>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>Нет прикрепленных документов.</p>
        }
    </div>

    <div class="form-group">
        <label>Условия депозита</label>
        @if (Model.DepositTerms != null && Model.DepositTerms.Any())
        {
            var groupedTerms = Model.DepositTerms.GroupBy(t => t.Currency);

            foreach (var group in groupedTerms)
            {
                <h4>Валюта: @group.Key</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Срок (месяцев)</th>
                            <th>Процентная ставка (%)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var term in group.OrderBy(t => t.TermMonths))
                        {
                            <tr>
                                <td>@term.TermMonths</td>
                                <td>@term.InterestRate</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
        else
        {
            <p>Нет доступных условий депозита.</p>
        }
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
