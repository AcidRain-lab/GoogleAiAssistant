@model WebObjectsBLL.DTO.TransactionDTO

@{
    ViewData["Title"] = "Edit Transaction";
}

<h2>Edit Transaction</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ActionType" class="control-label"></label>
        <select asp-for="ActionType" class="form-control">
            <option value="1">Income</option>
            <option value="2">Expense</option>
        </select>
        <span asp-validation-for="ActionType" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
