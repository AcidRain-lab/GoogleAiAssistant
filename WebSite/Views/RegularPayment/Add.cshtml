@model WebObjectsBLL.DTO.RegularPaymentDTO

@{
    ViewData["Title"] = "Add Regular Payment";
}

<h2>Add Regular Payment</h2>

<form asp-action="Add" method="post">
    <input type="hidden" asp-for="ClientId" />
    <div class="form-group">
        <label asp-for="PaymentDetails" class="control-label"></label>
        <input asp-for="PaymentDetails" class="form-control" />
        <span asp-validation-for="PaymentDetails" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaymentType" class="control-label"></label>
        <input asp-for="PaymentType" class="form-control" />
        <span asp-validation-for="PaymentType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Frequency" class="control-label"></label>
        <input asp-for="Frequency" class="form-control" />
        <span asp-validation-for="Frequency" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NextPaymentDate" class="control-label"></label>
        <input asp-for="NextPaymentDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="NextPaymentDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-route-clientId="@Model.ClientId" class="btn btn-secondary">Cancel</a>
</form>
