@model WebObjectsBLL.DTO.CardTypeDetailDTO

<h1>Детали типа карты</h1>

<div>
    <h4>Тип карты</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Платежная система
        </dt>
        <dd class="col-sm-10">
            @Model.PaymentSystemTypeName
        </dd>
        <dt class="col-sm-2">
            Аватар
        </dt>
        <dd class="col-sm-10">
            @if (Model.Avatar != null && Model.Avatar.Content != null)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Avatar.Content)" alt="Avatar" style="max-width: 150px; max-height: 150px; border: 1px solid #ccc;" />
            }
            else
            {
                <p>Аватар не загружен.</p>
            }
        </dd>
        <dt class="col-sm-2">
            Медиа файлы
        </dt>
        <dd class="col-sm-10">
            @if (Model.MediaFiles != null && Model.MediaFiles.Any())
            {
                <ul>
                    @foreach (var media in Model.MediaFiles)
                    {
                        <li>
                            <a href="@Url.Action("DownloadMedia", "CardTypes", new { id = media.Id })">@media.Name</a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>Медиа файлы не загружены.</p>
            }
        </dd>
        <dt class="col-sm-2">
            Документы
        </dt>
        <dd class="col-sm-10">
            @if (Model.Documents != null && Model.Documents.Any())
            {
                <ul>
                    @foreach (var document in Model.Documents)
                    {
                        <li>
                            <a href="@Url.Action("DownloadDocument", "CardTypes", new { id = document.Id })">@document.Name</a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>Документы не загружены.</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>
