@model WebObjectsBLL.DTO.CardTypeDTO

<h1>Card Type Details</h1>

@if (!string.IsNullOrEmpty(Model.AvatarBase64))
{
    <img src="data:image/jpeg;base64,@Model.AvatarBase64" style="width: 100px; height: 100px;" />
}
else
{
    <p>No Avatar</p>
}

<p><strong>Name:</strong> @Model.Name</p>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Payment System:</strong> @Model.PaymentSystemTypeName</p>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
