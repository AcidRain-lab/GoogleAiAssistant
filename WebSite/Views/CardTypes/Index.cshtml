@model IEnumerable<WebObjectsBLL.DTO.CardTypeTableDTO>

@{
    ViewData["Title"] = "Card Types";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Add New Card Type</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Avatar</th>
            <th>Primary Media</th> <!-- Новая колонка -->
            <th>Name</th>
            <th>Description</th>
            <th>Payment System</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cardType in Model)
        {
            <tr>
                <td style="width: 160px; height: 120px; text-align: center;">
                    @if (cardType.Avatar != null && cardType.Avatar.Content != null)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(cardType.Avatar.Content)" alt="Avatar" style="width: 100%; height: 100%; object-fit: contain; border: 1px solid #ddd;" />
                    }
                    else
                    {
                        <div style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center; border: 1px solid #ddd; background-color: #f9f9f9;">
                            <span>No Avatar</span>
                        </div>
                    }
                </td>
                <td style="width: 160px; height: 120px; text-align: center;">
                    @if (cardType.PrimaryMedia != null && cardType.PrimaryMedia.Content != null)
                    {
                        <img src="data:image/jpeg;base64,@cardType.PrimaryMedia.Base64Image" alt="Primary Media" style="width: 100%; height: 100%; object-fit: contain; border: 1px solid #ddd;" />
                    }
                    else
                    {
                        <div style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center; border: 1px solid #ddd; background-color: #f9f9f9;">
                            <span>No Primary Media</span>
                        </div>
                    }
                </td>
                <td>@cardType.Name</td>
                <td>@cardType.Description</td>
                <td>@cardType.PaymentSystemTypeName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@cardType.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@cardType.Id" class="btn btn-sm btn-warning">Edit</a>
                    <button class="btn btn-sm btn-danger" onclick="showDeleteModal('@cardType.Id')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function showDeleteModal(id) {
        document.getElementById('deleteId').value = id;
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        deleteModal.show();
    }
</script>
