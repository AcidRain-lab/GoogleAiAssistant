@model WebObjectsBLL.DTO.CardTypeDetailDTO

<h1>Редактировать тип карты</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentSystemTypeId" class="control-label">Платежная система</label>
        <select asp-for="PaymentSystemTypeId" class="form-control" asp-items="ViewBag.PaymentSystemTypes"></select>
        <span asp-validation-for="PaymentSystemTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Текущий аватар</label>
        @if (Model.Avatar != null && Model.Avatar.Content != null)
        {
            <div class="mb-3">
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Avatar.Content)" alt="Avatar" style="max-width: 150px; max-height: 150px; border: 1px solid #ccc;" />
            </div>
        }
        else
        {
            <p>Аватар не загружен.</p>
        }
        <input type="file" name="avatarFile" class="form-control" />
    </div>

    <div class="form-group">
        <label>Добавить медиа файлы</label>
        <input type="file" name="mediaFiles" class="form-control" multiple />
    </div>

    <div class="form-group">
        <label>Существующие медиа файлы</label>
        @if (Model.MediaFiles != null && Model.MediaFiles.Any())
        {
            <div class="row">
                @foreach (var media in Model.MediaFiles)
                {
                    <div class="col-md-3 text-center mb-3">
                        @if (!string.IsNullOrEmpty(media.Base64Image))
                        {
                            <div>
                                <img src="data:image/jpeg;base64,@media.Base64Image" alt="@media.Name" style="max-width: 100%; max-height: 150px; border: 1px solid #ddd;" />
                            </div>
                        }
                        else
                        {
                            <div>
                                <a href="@Url.Action("DownloadMedia", "CardTypes", new { id = media.Id })">@media.Name</a>
                            </div>
                        }
                        @if (Model.MediaFiles.Count > 1)
                        {
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="radio" name="IsPrimaryMediaId" value="@media.Id" @(media.IsPrime ? "checked" : "") />
                                <label class="form-check-label">Установить как основное</label>
                            </div>
                        }
                        <button type="button" class="btn btn-danger btn-sm mt-2" onclick="removeMedia('@media.Id')">Удалить</button>
                    </div>
                }
            </div>
        }
        else
        {
            <p>Нет прикрепленных медиа файлов.</p>
        }
    </div>

    <div class="form-group">
        <label>Добавить документы</label>
        <input type="file" name="documentFiles" class="form-control" multiple />
    </div>

    <div class="form-group">
        <label>Существующие документы</label>
        @if (Model.Documents != null && Model.Documents.Any())
        {
            <ul>
                @foreach (var document in Model.Documents)
                {
                    <li>
                        <a href="@Url.Action("DownloadDocument", "CardTypes", new { id = document.Id })">@document.Name</a>
                        <button type="button" class="btn btn-danger btn-sm" onclick="removeDocument('@document.Id')">Удалить</button>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>Нет прикрепленных документов.</p>
        }
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <script>
        function removeMedia(mediaId) {
            if (confirm('Вы уверены, что хотите удалить этот медиа файл?')) {
                $.ajax({
                    url: '@Url.Action("DeleteMedia", "CardTypes")',
                    type: 'POST',
                    data: { id: mediaId },
                    success: function () {
                        location.reload();
                    },
                    error: function () {
                        alert('Ошибка при удалении медиа файла.');
                    }
                });
            }
        }

        function removeDocument(documentId) {
            if (confirm('Вы уверены, что хотите удалить этот документ?')) {
                $.ajax({
                    url: '@Url.Action("DeleteDocument", "CardTypes")',
                    type: 'POST',
                    data: { id: documentId },
                    success: function () {
                        location.reload();
                    },
                    error: function () {
                        alert('Ошибка при удалении документа.');
                    }
                });
            }
        }
    </script>
}
