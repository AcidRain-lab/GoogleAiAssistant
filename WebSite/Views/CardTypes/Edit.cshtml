@model WebObjectsBLL.DTO.CardTypeDTO

<h1>Редактировать тип карты</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentSystemTypeId" class="control-label">Платежная система</label>
        <select asp-for="PaymentSystemTypeId" class="form-control" asp-items="ViewBag.PaymentSystemTypes"></select>
        <span asp-validation-for="PaymentSystemTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Текущий аватар</label>
        @if (!string.IsNullOrEmpty(Model.AvatarBase64))
        {
            <div class="mb-3">
                <img src="@Model.AvatarBase64" alt="Avatar" style="max-width: 150px; max-height: 150px; border: 1px solid #ccc;" />
            </div>
        }
        else
        {
            <p>Аватар не загружен.</p>
        }
        <input type="file" name="avatarFile" class="form-control" />
    </div>

    <div class="form-group">
        <label>Добавить медиа файлы</label>
        <input type="file" name="mediaFiles" class="form-control" multiple />
    </div>

    <div class="form-group">
        <label>Существующие медиа файлы</label>
        @if (Model.MediaFiles != null && Model.MediaFiles.Any())
        {
            <ul>
                @foreach (var media in Model.MediaFiles)
                {
                    <li>
                        <a href="@Url.Action("DownloadMedia", "CardTypes", new { id = media.Id })">@media.Name</a>
                        <button type="button" class="btn btn-danger btn-sm" onclick="removeMedia('@media.Id')">Удалить</button>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>Нет прикрепленных медиа файлов.</p>
        }
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <script>
        function removeMedia(mediaId) {
            if (confirm('Вы уверены, что хотите удалить этот медиа файл?')) {
                $.ajax({
                    url: '@Url.Action("DeleteMedia", "CardTypes")',
                    type: 'POST',
                    data: { id: mediaId },
                    success: function () {
                        location.reload();
                    },
                    error: function () {
                        alert('Ошибка при удалении медиа файла.');
                    }
                });
            }
        }
    </script>
}
