@model WebObjectsBLL.DTO.CardTypeDetailDTO

<h1>Добавить тип карты</h1>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Аватар</label>
        <input type="file" name="avatarFile" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">Медиафайлы</label>
        <input type="file" name="mediaFiles" class="form-control" multiple />
    </div>

    <div class="form-group">
        <label class="control-label">Документы</label>
        <input type="file" name="documentFiles" class="form-control" multiple />
    </div>

    <div class="form-group">
        <label asp-for="PaymentSystemTypeId" class="control-label">Платежная система</label>
        <select asp-for="PaymentSystemTypeId" class="form-control" asp-items="ViewBag.PaymentSystemTypes"></select>
        <span asp-validation-for="PaymentSystemTypeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
